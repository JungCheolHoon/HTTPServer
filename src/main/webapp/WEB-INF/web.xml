<?xml version="1.0" encoding="utf-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                     http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.customer.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>JoinServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.customer.JoinServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JoinServlet</servlet-name>
    <url-pattern>/join</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ViewServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.board.ViewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewServlet</servlet-name>
    <url-pattern>/viewBoard</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.comment.CommentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommentServlet</servlet-name>
    <url-pattern>/comment</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>WriteServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.board.WriteServlet</servlet-class>
    <multipart-config>
      <location>/Users/mz01-junghunee/Documents/tutorial_directory</location>
      <max-file-size>5242880</max-file-size> <!-- 5MB -->
      <max-request-size>10485760</max-request-size> <!-- 10MB -->
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>WriteServlet</servlet-name>
    <url-pattern>/writeBoard</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.board.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/deleteBoard/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.board.UpdateServlet</servlet-class>
    <multipart-config>
      <location>/Users/mz01-junghunee/Documents/tutorial_directory</location>
      <max-file-size>5242880</max-file-size> <!-- 5MB -->
      <max-request-size>10485760</max-request-size> <!-- 10MB -->
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/updateBoard</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LikesServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.board.likesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LikesServlet</servlet-name>
    <url-pattern>/likesBoard</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FileDownloadServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.jdbc.servlet.file.FileDownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileDownloadServlet</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>kr.co.mz.tutorial.jdbc.listener.MyServletContextListener</listener-class>
  </listener>
  <filter>
    <filter-name>loggingFilter</filter-name>
    <filter-class>kr.co.mz.tutorial.jdbc.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loggingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
